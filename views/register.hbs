

<div class="container_register mt-4">
  <div class="register_title">
    <h1>
      Register
    </h1>

  </div>
    
  <div class="form_register">
<form method="post">
  <fieldset class="form-group">
    <label for="username" class="col-2 control-label">
      Username:
    </label>
    <input
      name="username"
      id="username"
      required
      type="email"
      placeholder="email@email.com"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="password" class="col-2 control-label">
      Password:
    </label>
    <input
      name="password"
      id="password"
      type="password"
      required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
    />
  </fieldset>
  <fieldset class="form-group">
    <label for="confirm" class="col-2 control-label">
      Confirm Password:
    </label>
    <input
      name="confirm"
      id="confirm"
      type="password"
      required
      pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
    />
  </fieldset>
  <fieldset class="form-group">
    <button class="btn btn-secondary">
      Register
    </button>
    <hr />
    Already have an account?
    <a href="/login" title="Login">
      Login
    </a>
  </fieldset>
</form>

</div>

</div>